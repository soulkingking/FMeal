<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/img_bg_01"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/y3"
            android:layout_weight="1">
            <include layout="@layout/include_seller_dish_title"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/seller_icon"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/x50"
                android:layout_gravity="center"
                android:src="@drawable/img_circle_icon"/>
            <ImageView
                android:layout_marginTop="@dimen/y55"
                android:layout_marginLeft="@dimen/x185"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_edit"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/seller_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/y2"
                android:gravity="center"
                android:textSize="@dimen/userfragment"
                android:textColor="@android:color/white"
                android:text="昵称"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <RatingBar
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y2"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="0"
                android:id="@+id/seller_degree" />
            <TextView
                android:id="@+id/seller_degree2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/y2"
                android:gravity="center"
                android:textSize="@dimen/userfragmentsmall"
                android:textColor="@android:color/white"
                android:text="4"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x2"
        android:layout_marginBottom="@dimen/x2"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_seller_good"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/userfragment"
            android:text="订餐"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/userfragment"
            android:layout_height="wrap_content"
            android:text="评价"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tv_infor"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="详情"
            android:textSize="@dimen/userfragment"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:layout_width="0dp"
            android:layout_height="@dimen/y5"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/login_bg">

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:layout_width="0dp"
            android:layout_height="@dimen/y5"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:background="@color/login_bg">

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_3"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:layout_width="0dp"
            android:layout_height="@dimen/y5"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:background="@color/login_bg">

        </LinearLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/seller_dish_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"/>
</LinearLayout>