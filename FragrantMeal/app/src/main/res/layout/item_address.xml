<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/boderbottom">
    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/boderright">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x5"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/userfragmentsmall"
                android:layout_weight="1"
                android:clickable="false"
                android:text="姓名"/>
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/userfragmentsmall"
                android:layout_weight="4"
                android:clickable="false"
                android:text="手机号码"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x5"
            android:textColor="@color/black"
            android:textSize="@dimen/userfragmentsmall"
            android:clickable="false"
            android:text="地址"/>

    </LinearLayout>
    <Button
        android:id="@+id/update_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:layout_gravity="center"
        android:background="@drawable/takeout_img_order_status_digest_received"/>

</LinearLayout>