<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/boderbottom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x10"
        android:layout_marginTop="@dimen/x5"
        android:layout_marginBottom="@dimen/x5"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/order_seller_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/userfragmentsmall"
            android:text="菜名"/>
        <TextView
            android:id="@+id/order_seller_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/userfragmentsmall"
            android:textColor="@color/text_gay"
            android:layout_weight="1"
            android:text="x3"/>
        <TextView
            android:id="@+id/order_seller_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="right"
            android:textSize="@dimen/userfragmentsmall"
            android:layout_weight="1"
            android:text="￥20"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/gay2">

    </LinearLayout>
</LinearLayout>