<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/boderbottom"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/x10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/poisearch_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/userfragment"
                android:text="区名"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/poisearch_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gay"
                android:textSize="@dimen/userfragmentsmall"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/poisearch_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gay"
                android:textSize="@dimen/userfragmentsmall"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>