<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gay2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10"
        android:background="@color/gay2">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/y10"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/travel__ic_tour_schedule_days"
            />

        <TextView
            android:id="@+id/seller_address"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/x5"
            android:layout_height="wrap_content"
            android:textSize="@dimen/userfragmentsmall"
            android:layout_weight="4"
            android:textColor="@color/black"
            android:background="@drawable/boderright"
            android:text="地址"/>
        <LinearLayout
            android:id="@+id/btn_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <Button
                android:layout_marginLeft="@dimen/x10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/group_ic_phone_deal_detail"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10"
        android:background="@color/gay2">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/y10"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/df_time"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/x5"
            android:layout_height="wrap_content"
            android:textSize="@dimen/userfragmentsmall"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="配送时间：09:00-21:00"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10"
        android:background="@color/gay2">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/boderright"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_deiverytime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/y10"
                android:textSize="@dimen/userfragmentsmall"
                android:gravity="center"
                android:text="50分钟"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/y10"
                android:layout_marginBottom="@dimen/y10"
                android:textColor="@color/black"
                android:textSize="@dimen/userfragmentsmall"
                android:gravity="center"
                android:text="平均送达时间"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/boderright"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_sendprice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/y10"
                android:textSize="@dimen/userfragmentsmall"
                android:gravity="center"
                android:text="￥15"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/y10"
                android:layout_marginBottom="@dimen/y10"
                android:textColor="@color/black"
                android:textSize="@dimen/userfragmentsmall"
                android:gravity="center"
                android:text="起送价"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <TextView
                android:id="@+id/tv_df"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/y10"
                android:gravity="center"
                android:textSize="@dimen/userfragmentsmall"
                android:text="￥0"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/y10"
                android:layout_marginBottom="@dimen/y10"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="@dimen/userfragmentsmall"
                android:text="配送费"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10"
        android:background="@color/gay2">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/y10"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_activity"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/x5"
            android:layout_height="wrap_content"
            android:textSize="@dimen/userfragmentsmall"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="活动"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10"
        android:background="@color/gay2">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/y10"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/x5"
            android:layout_height="wrap_content"
            android:textSize="@dimen/userfragmentsmall"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="配送信息：由商家提供配送服务"/>

    </LinearLayout>
</LinearLayout>