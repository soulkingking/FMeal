<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/boderbottom">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x10"
                android:clickable="false"
                android:src="@drawable/travel__ic_category_farmhouse"
                />
            <TextView
                android:id="@+id/order_seller_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/x10"
                android:clickable="false"
                android:layout_weight="1"
                android:textSize="@dimen/userfragmentsmall"
                android:textColor="@color/black"
                android:text="店名"
                />
            <TextView
                android:id="@+id/tv_order_status"
                android:layout_width="wrap_content"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:padding="@dimen/x10"
                android:clickable="false"
                android:textSize="@dimen/userfragmentsmall"
                android:textColor="@color/login_bg"
                android:text="状态"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/x10"
            android:paddingBottom="@dimen/x10"
            android:orientation="horizontal"
            android:background="@drawable/boderbottom">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x10"
                android:clickable="false"
                android:src="@drawable/ic_default"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="@dimen/x5"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/userfragmentsmall"
                        android:textColor="@color/text_gay"
                        android:clickable="false"
                        android:text="下单时间："
                        />
                    <TextView
                        android:id="@+id/order_seller_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/x5"
                        android:clickable="false"
                        android:textSize="@dimen/userfragmentsmall"
                        android:textColor="@color/text_gay"
                        android:text="时间"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_order_zong"
                    android:paddingTop="@dimen/x5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:textSize="@dimen/userfragmentsmall"
                    android:textColor="@color/text_gay"
                    android:text="￥18"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="@drawable/boderbottom">
        <Button
            android:id="@+id/btn_buy"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:layout_margin="@dimen/x5"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/y5"
            android:paddingBottom="@dimen/y5"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:textSize="@dimen/userfragmentsmall"
            android:textColor="@drawable/selector_comment_click_text"
            android:background="@drawable/selector_btn_comment_click_bg"
            android:text="再来一单"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10"
        android:background="@color/gay2">

    </LinearLayout>
</LinearLayout>