<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gay2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/x10">
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_gay"
            android:textSize="@dimen/title"
            android:text="订单已下达"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="|"
                android:textSize="@dimen/title"
                android:gravity="center"/>
        </LinearLayout>
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_gay"
            android:textSize="@dimen/title"
            android:text="商家已接单"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="|"
                android:textSize="@dimen/title"
                android:gravity="center"/>
        </LinearLayout>
        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_gay"
            android:textSize="@dimen/title"
            android:text="订单开始派送"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="|"
                android:textSize="@dimen/title"
                android:gravity="center"/>
        </LinearLayout>
        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_gay"
            android:textSize="@dimen/title"
            android:text="订单完成"
            />
    </LinearLayout>



</LinearLayout>