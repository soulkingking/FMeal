<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:background="@color/gay2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gay2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/x10"
                android:textColor="@color/text_gay"
                android:textSize="@dimen/userfragmentsmall"
                android:text="订单详情"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/boderbottom">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x10"
                android:src="@drawable/takeout_order_detail_poi_icon"
                />
            <TextView
                android:id="@+id/order_seller_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/x10"
                android:layout_weight="1"
                android:textSize="@dimen/userfragmentsmall"
                android:textColor="@color/black"
                android:text="店名"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom|center">

        </LinearLayout>
        <ListView
            android:id="@+id/order_seller_dish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:divider="#00000000">

        </ListView>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/boderbottom">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/x10"
                        android:textSize="@dimen/userfragmentsmall"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:text="配送费"
                        />
                    <TextView
                        android:id="@+id/order_seller_df"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="@dimen/x10"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:text="￥20"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/boderbottom">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/x10"
                        android:src="@drawable/ic_promotion"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gay"
                        android:padding="@dimen/x5"
                        android:layout_weight="1"
                        android:textSize="@dimen/userfragmentsmall"
                        android:text="满减优惠"/>
                    <TextView
                        android:id="@+id/order_seller_notice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textSize="@dimen/userfragmentsmall"
                        android:padding="@dimen/x10"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:text="-￥2"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/boderbottom">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/x10"
                        android:layout_weight="2">
                        <TextView
                            android:id="@+id/order_seller_zong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gay"
                            android:textSize="@dimen/userfragmentsmall"
                            android:text="总计￥2"/>
                        <TextView
                            android:id="@+id/order_seller_youhui"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gay"
                            android:paddingLeft="@dimen/x10"
                            android:textSize="@dimen/userfragmentsmall"
                            android:layout_weight="1"
                            android:text="优惠￥2"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/x10"
                        android:gravity="center"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="right"
                            android:textSize="@dimen/userfragmentsmall"
                            android:textColor="@color/black"
                            android:text="实付"/>
                        <TextView
                            android:id="@+id/order_seller_shifu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:textSize="@dimen/userfragmentsmall"
                            android:textColor="@color/login_bg"
                            android:text="￥18"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gay2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/x10"
                        android:textColor="@color/text_gay"
                        android:textSize="@dimen/userfragmentsmall"
                        android:text="配送信息"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/boderbottom">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/x10"
                        android:textSize="@dimen/userfragmentsmall"
                        android:textColor="@color/gay"
                        android:text="期望时间"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/x10"
                        android:layout_weight="1"
                        android:textSize="@dimen/userfragmentsmall"
                        android:textColor="@color/black"
                        android:text="立即配送"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/boderbottom">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/x10"
                        android:textSize="@dimen/userfragmentsmall"
                        android:textColor="@color/gay"
                        android:text="收货人"
                        />
                    <TextView
                        android:id="@+id/order_people"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="@dimen/x10"
                        android:layout_weight="1"
                        android:textSize="@dimen/userfragmentsmall"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/x10"
                        android:textSize="@dimen/userfragmentsmall"
                        android:textColor="@color/gay"
                        android:text="联系电话"
                        />
                    <TextView
                        android:id="@+id/order_phone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="@dimen/x10"
                        android:layout_weight="2"
                        android:textSize="@dimen/userfragmentsmall"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/boderbottom">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/x10"
                        android:textSize="@dimen/userfragmentsmall"
                        android:textColor="@color/gay"
                        android:text="配送地址"
                        />
                    <TextView
                        android:id="@+id/order_address"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="@dimen/x10"
                        android:layout_weight="1"
                        android:textSize="@dimen/userfragmentsmall"
                        android:textColorHint="@color/gay"
                        android:hint="点击选择地址"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/boderbottom">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/x10"
                        android:textSize="@dimen/userfragmentsmall"
                        android:textColor="@color/gay"
                        android:text="配送服务"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/x10"
                        android:layout_weight="1"
                        android:textSize="@dimen/userfragmentsmall"
                        android:textColor="@color/black"
                        android:text="由商家提供配送服务"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gay2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/x10"
                        android:textColor="@color/text_gay"
                        android:textSize="@dimen/userfragmentsmall"
                        android:text="送餐备注"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boderbottom">
                    <EditText
                        android:id="@+id/et_extra"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/x10"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textSize="@dimen/userfragmentsmall"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gay"
                        android:hint="请输入你的要求"
                        />
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/gay2"
                    android:layout_gravity="bottom">
                    <Button
                        android:id="@+id/btn_buy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/x10"
                        android:layout_gravity="center|bottom"
                        android:text="立即下单"
                        android:background="@drawable/selector_btn_login_click_bg"/>
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</ScrollView>