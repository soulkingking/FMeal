<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/boderbottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/seller_dish_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_default"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:orientation="vertical">
            <TextView
                android:id="@+id/seller_dish_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/userfragment1"
                android:text="薯条"
                />
            <TextView
                android:layout_marginTop="@dimen/y2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gay"
                android:textSize="@dimen/userfragmentsmall"
                android:id="@+id/seller_dish_num"
                android:text="月售24"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginBottom="@dimen/x10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/userfragment"
            android:textColor="@color/login_bg"
            android:id="@+id/seller_dish_price"
            android:text="￥10"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/gay"
            android:textSize="@dimen/userfragmentsmall"
            android:text="/份"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:background="@drawable/selector_btn_sub_click"/>
            <TextView
                android:id="@+id/buy_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:paddingLeft="@dimen/x5"
                android:paddingRight="@dimen/x5"
                android:visibility="invisible"
                android:textSize="@dimen/userfragment"
                android:text="0"/>
            <Button
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn_add_click"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>